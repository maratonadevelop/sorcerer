# Example environment variables for Sorcerer server
# Copy to .env.local and customize. NEVER commit real secrets.

# Database (Postgres)
# Example: Supabase Session Pooler connection string
# Your password stays the same; only the host changes.
DATABASE_URL="postgresql://postgres.<PROJECT_REF>:password@aws-1-us-east-1.pooler.supabase.com:5432/postgres"

## Admin bootstrap (seed & upgrade)
# ADMIN_EMAIL / ADMIN_PASSWORD: cria admin se não existir.
# Se já existir usuário com esse email:
#   - promove a admin (se ainda não for)
#   - atualiza a senha SOMENTE se ADMIN_FORCE_UPDATE_PASSWORD=true
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change_me_strong"
ADMIN_ID="admin-root"
ADMIN_FORCE_UPDATE_PASSWORD="false"

## Custo do bcrypt (quanto maior mais seguro, porém mais lento). Recomendações: 12-14.
BCRYPT_ROUNDS="12"

## Segredo da sessão (trocar por string forte e única)
SESSION_SECRET="replace-with-strong-secret"
# Custom cookie name (optional)
# SESSION_COOKIE_NAME="sorcerer.sid"

# Sessions are stored in Postgres via connect-pg-simple

## Limite de tamanho para uploads (padrão 25mb)
# BODY_LIMIT="25mb"

## Forçar imports/seeds (apenas desenvolvimento / casos avançados)
# IMPORT_FULLNOVEL_ON_STARTUP="false"
# FORCE_SEED_CHARACTERS="false"

# Vite CORS origin for dev client
CORS_ORIGIN="http://localhost:5173"
